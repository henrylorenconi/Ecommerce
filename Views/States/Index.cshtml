@model IEnumerable<ECommerce.Models.State>

@{
    ViewBag.Title = "Estados de Pedidos";
}
<br />
<h2>Estados de Pedidos</h2>
<br />
<p>
    @Html.ActionLink("Cadastrar Status", "Create", null, new { @class = "btn btn-primary btn-lg" })
    <br /><br />
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.StateId }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.StateId }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.StateId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
