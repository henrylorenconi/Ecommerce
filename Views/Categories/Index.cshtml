@model IEnumerable<ECommerce.Models.Category>

@{
    ViewBag.Title = "Index";
}
<br />
<h2>Categorias</h2>
<br />
<p>
    @Html.ActionLink("Cadastrar Categoria", "Create", null, new { @class = "btn btn-primary btn-lg" })
</p>
<br /><br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Company.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.CategoryId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.CategoryId }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.CategoryId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
