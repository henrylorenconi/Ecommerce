@model ECommerce.Models.Product

@{
    ViewBag.Title = "Detalhes Produto";
}

<h2>Detalhes do Produto</h2>

<div class="form-group">
    <div class="col-md-6">
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Category.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Category.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Company.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Company.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Tax.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Tax.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Barcode)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Barcode)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Image)
                </dt>

                <dd>
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="@Url.Content(Model.Image)" alt="Image" style="width:65px;height:65px;max-width: 100%; height: auto;" />

                    }
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Remarks)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Remarks)
                </dd>

            </dl>
        </div>
    </div>
    <div class="col-md-6">
        <h4>Estoque</h4>
        <hr />
        @if (Model.Inventory.Count == 0)
        {
            <h5>Não há estoque do produto!</h5>
        }
        else
        {
    <table class="table">
        <tr>
            <th>
                Armazém
            </th>

            <th>
                Estoque
            </th>
        </tr>

        @foreach (var item in Model.Inventory.ToList())
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.WareHouse.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
            </tr>
        }
        <tr>
            <td>
                <strong>Total</strong>
            </td>
            <td>
                <strong>@Html.DisplayFor(model => model.Stock)</strong>
            </td>
        </tr>
    </table>
        }
    </div>
</div>
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.ProductId }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
