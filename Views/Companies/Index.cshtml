@model IEnumerable<ECommerce.Models.Company>

@{
    ViewBag.Title = "Companhias";
}
<br />
<h2>Companhias</h2>
<br />
<p>
    @Html.ActionLink("Cadastrar Companhia", "Create", null, new { @class = "btn btn-primary btn-lg" })
    <br /><br />
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Departaments.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cities.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Departaments.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Cities.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Phone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @if (!string.IsNullOrEmpty(item.Logo))
        {
            <img src="@Url.Content(item.Logo)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
        }
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.CompanyId }, new { @class = "btn btn-info" }) |
        @Html.ActionLink("Detalhes", "Details", new { id = item.CompanyId }, new { @class = "btn btn-primary" }) |
        @Html.ActionLink("Excluir", "Delete", new { id = item.CompanyId }, new { @class = "btn btn-danger" })
    </td>
</tr>
}

</table>
